{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "GOOGLE_SHEETS_API_KEY": "@google_sheets_api_key",
    "GOOGLE_SHEET_ID": "@google_sheet_id"
  }
}
